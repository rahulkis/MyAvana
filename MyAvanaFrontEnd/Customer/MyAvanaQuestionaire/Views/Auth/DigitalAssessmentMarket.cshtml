<script>
    function redirectTo() {
        window.location.href = "/Questionaire/start?id=";
    }
    function redirectToPayment(userId) {
        window.location.href = "/Auth/PackagePayment?id="+userId;
    }
    function BuyTrialPackage() {
        var digitalAssessmentMarketModel = {
            isTrialOn: true
        }
        $('.preloader').css('display', 'block');
        $.ajax({
            type: "post",
            url: "/auth/GetTrialPackageDigitalAssessment",
            data: digitalAssessmentMarketModel,
            success: function (response) {
                $('.preloader').css('display', 'none');
                if (response === "1") {
                    redirectTo();
                }
                else {
                    $('#failureMessage').text("Something went's wrong");
                    $('.alert-danger').css("display", "block");
                    $('.alert-danger').delay(2000).fadeOut();
                }
            },
            error: function (response) {

            },
            complete: function () {

            }
        });
    }
</script>

