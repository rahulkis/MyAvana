                            <input type="file" id="productImage" accept="image/*" style="display:none" />
                            <div class="product-Images-carousel">
                                <div class="owl-carousel owl-theme">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

