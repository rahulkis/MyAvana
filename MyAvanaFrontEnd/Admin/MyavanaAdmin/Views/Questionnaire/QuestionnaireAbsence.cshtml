                                            </td>
                                            <td>
                                                <a href="/Questionnaire/start/@quest.UserId" Title="Add QA" onclick="document.cookie = 'isQAAbsence=1'" ;><img src="http://admin.myavana.com/images/questionaireAdmin.png" /></a>
                                            </td>
                                            <td>
                                                @if (quest.IsDraft == true)
