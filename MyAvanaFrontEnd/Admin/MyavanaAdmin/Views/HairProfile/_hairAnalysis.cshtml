<style>
    .small-img {
        position: relative;
    }

    .small-img::after {
        content: attr(alt); /* Use the alt text or custom text */
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        background-color: rgba(0, 0, 0, 0.7);
        color: #fff;
        padding: 5px;
        font-size: 12px;
        white-space: nowrap;
        display: none; /* Initially hide the text */
        border-radius: 5px;
    }
    
    .small-img:hover::after {
        display: block; /* Show the text when hovered */
    }
    /**/
    .small-img {
        max-width: 150px; /* Adjust as needed */
