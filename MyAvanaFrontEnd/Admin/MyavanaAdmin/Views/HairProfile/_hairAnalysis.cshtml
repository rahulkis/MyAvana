    #fancy-img-modal button.close {
        position: absolute;
        right: 20px;
        top: 20px;
        color: #fff;
        opacity: 1;
    }

        #fancy-img-modal button.close span {
            color: #fff !important;
            opacity: 1;
            font-size: 30px;
        }

    #fancy-img-modal .modal-content {
        background-color: transparent;
        border: none;
        border-radius: 4px;
        box-shadow: none;
    }

    #fancy-img-modal span {
        color: #fff !important;
        opacity: 1;
    }
